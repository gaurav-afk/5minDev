<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_shorts">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_go_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:drawableLeft="@drawable/ic_back_arrow_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/white"
            android:paddingTop="40dp"
            android:text="@string/shorts"
            android:textColor="@color/grey"
            android:textSize="24sp" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:shimmer_auto_start="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Placeholder views to mimic list items -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shimmer_background" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shimmer_background" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shimmer_background" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shimmer_background" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shimmer_background" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual ListView, initially hidden -->
        <ListView
            android:id="@+id/lv_shorts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2000dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="15dp"
            android:visibility="gone"
            tools:listitem="@layout/item_shorts" />

    </LinearLayout>
</ScrollView>
